<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9patch Image src xml: " />

    <ImageView
        android:id="@+id/image_src_xml_9patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/abs__toast_frame" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9patch Image background xml: " />
    
    <ImageView
        android:id="@+id/image_background_xml_9patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/abs__toast_frame" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9patch Image src asset: " />
    
    <ImageView
        android:id="@+id/image_src_asset_9patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9patch Image background asset: " />
    
    <ImageView
        android:id="@+id/image_background_asset_9patch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image background asset: " />

    <ImageView
        android:id="@+id/image_background_asset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>
